<div class="container register-form">
  <div class="form">
    <div class="note">
        <p>Cadastro do m√©dico.</p>
    </div>
    <div class="form-content">
      <%= simple_form_for @doctor do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.input :name, label: "Nome", input_html: { class: "form-control" } %>
            </div>
            <div class="form-group">
              <%= f.input :crm, label: "Numero do CRM", input_html: { class: "form-control" }%>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
            </div>
            <div class="form-group">
              <%= f.input :crm_uf, label: "Estado do CRM", collection: brazilian_states, input_html: { class: "form-control" } %>
            </div>
          </div>
        </div>
        <%= f.button :submit, 'Cadastrar', class: "btnSubmit form-control" %>
        <% end %>
    </div>
  </div>
</div>