<div class="container">
  <h2>Lista de consultas</h2>
  <p><%= link_to "Nova consulta", new_appointment_path, class: "btn btn-primary" %></p>

  <table class="table" id="myTable">
    <thead>
      <th>ID</th>
      <th>Doutor</th>
      <th>Paciente</th>
      <th>Horario da consulta</th>
      <th>Horario de termino</th>
      <th>Editar</th>
      <th>Apagar</th>
    </thead>
    <tbody>
      <% @appointments.each do |appointment| %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td><%= appointment.id %></td>
          <td><%= appointment.doctor.name %></td>
          <td><%= appointment.patient.name %></td>
          <td><%= appointment.starts_at.strftime("%d/%m/%Y - %H:%M") %></td>
          <td><%= appointment.ends_at.strftime("%d/%m/%Y - %H:%M") %></td>
          <td>
            <%= link_to edit_appointment_path(appointment) do%>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to appointment_path(appointment), method: :delete, data: { confirm: 'Tem certeza?' } do%>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>